<UserControl x:Class="ScooterSharing.UserControls.TarifCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ScooterSharing.UserControls"
             mc:Ignorable="d" 
             Height="200" MinWidth="200" MaxWidth="250">
    <Border Margin="10" Padding="5" Background="{DynamicResource Accent}" CornerRadius="15">
        <Border.Effect>
            <DropShadowEffect
              Color="Black"
              Opacity="0.25"
              BlurRadius="15"
              ShadowDepth="0" />
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>

            </Grid.RowDefinitions>
            <Border Background="{DynamicResource Tarif}"  CornerRadius="10" Margin="0,0,0,5">
                <Grid>
                    <TextBlock x:Name="idText" Text="#1" FontSize="28" Margin="5,2,5,5" FontWeight="Bold" Foreground="{DynamicResource Accent}"/>
                    <Viewbox HorizontalAlignment="Center" VerticalAlignment="Center" Cursor="Hand">
                        <Canvas Width="50" Height="50">
                            <Path Fill="{DynamicResource Accent}"
                              Data="M28 52C14.745 52 4 41.255 4 28S14.745 4 28 4s24 10.745 24 24s-10.745 24-24 24m-2.78-32.169h3.34c3.069 0 4.611 1.607 4.611 4.151c0 2.56-1.542 4.183-4.628 4.183H25.22zm4.198 11.197c4.421 0 7.332-2.99 7.332-7.062c0-4.087-2.847-7.109-7.22-7.109h-7.825v12.358H18.57v1.813h3.134v3.085H18.57v1.797h3.134v3.467h3.514V35.91h6.378v-1.797h-6.378v-3.085z" Height="35" Stretch="Uniform" Width="37" Canvas.Left="6.5" Canvas.Top="7.5"/>
                        </Canvas>
                    </Viewbox>
                </Grid>
            </Border>
            <StackPanel Orientation="Horizontal" Grid.Row="1">
                <Viewbox  Width="40" Height="40" HorizontalAlignment="Center" VerticalAlignment="Center" Cursor="Hand">
                    <Canvas Width="50" Height="50">
                        <Path Fill="{DynamicResource Foreground}" 
          Data="m938 458.8l-29.6-312.6c-1.5-16.2-14.4-29-30.6-30.6L565.2 86h-.4c-3.2 0-5.7 1-7.6 2.9L88.9 557.2a9.96 9.96 0 0 0 0 14.1l363.8 363.8c1.9 1.9 4.4 2.9 7.1 2.9s5.2-1 7.1-2.9l468.3-468.3c2-2.1 3-5 2.8-8M699 387c-35.3 0-64-28.7-64-64s28.7-64 64-64s64 28.7 64 64s-28.7 64-64 64" Height="35" Stretch="Uniform" Width="37" Canvas.Left="6.5" Canvas.Top="7.5"/>
                    </Canvas>
                </Viewbox>
                <TextBlock x:Name="NameText" Text="Название" FontWeight="Thin" Margin="5,0,0,0" VerticalAlignment="Center" FontSize="16"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Grid.Row="2">
                <Viewbox Width="40" Height="40" HorizontalAlignment="Center" VerticalAlignment="Center" Cursor="Hand">
                    <Canvas Width="50" Height="50">
                        <Path Fill="{DynamicResource Foreground}" 
Data="M8 21h2v-3h6v-2h-6v-2h4.5c2.757 0 5-2.243 5-5s-2.243-5-5-5H9a1 1 0 0 0-1 1v7H5v2h3v2H5v2h3zm2-15h4.5c1.654 0 3 1.346 3 3s-1.346 3-3 3H10z" Height="35" Stretch="Uniform" Width="37" Canvas.Left="6.5" Canvas.Top="7.5"/>
                    </Canvas>
                </Viewbox>
                <TextBlock x:Name="priceText" Text="1000 руб/мес" FontWeight="Thin" Margin="5,0,0,0" VerticalAlignment="Center" FontSize="16"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>

