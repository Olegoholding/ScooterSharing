<Window x:Class="ScooterSharing.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ScooterSharing"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="{DynamicResource Background}">
        <Grid.RowDefinitions>
            <RowDefinition Height="90"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Border Background="{DynamicResource Accent}" Margin="15" CornerRadius="30">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <RadioButton Tag="Самокаты" x:Name="Scooters" Style="{DynamicResource radioButton}" Content="Самокаты" Checked="CheckedScooters"/>
                <RadioButton Tag="Точки" x:Name="Points" Style="{DynamicResource radioButton}" Content="Точки" Checked="CheckedPoints" Cursor="Hand"/>
                <RadioButton Tag="Тарифы" x:Name="Tarifs" Style="{DynamicResource radioButton}" Content="Тарифы" Checked="CheckedTariffs"/>
            </StackPanel>
        </Border>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="400"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <StackPanel Margin="15,0,15,10">
                <Border Background="{DynamicResource Accent}" Height="20" CornerRadius="10,10,0,0" Width="150" HorizontalAlignment="Left" Margin="30,0,0,0">
                    <TextBlock Name="SrcLbl" FontSize="14" Text="Название самоката" Foreground="{DynamicResource Foreground2}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </Border>

                <Border Background="{DynamicResource Accent}" Height="40" CornerRadius="15">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="40"/>
                        </Grid.ColumnDefinitions>

                        <TextBox Name="SrcBox"  FontSize="20" BorderThickness="0" VerticalContentAlignment="Center" Margin="15,0,0,0"/>
                        <Border Width="1" Background="{DynamicResource Foreground2}" Margin="0,8,0,8" HorizontalAlignment="Right"/>
                        <TextBlock Name="searchButton" MouseLeftButtonDown="SearchButton_MouseLeftButtonDown" Cursor="Hand" Grid.Column="1" FontSize="26" Text="⌕" Foreground="{DynamicResource Foreground}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Grid>
                </Border>
            </StackPanel>

            <ScrollViewer Grid.Row="1" Margin="15,0,15,0" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                <WrapPanel Name="wrapPanel"/>
            </ScrollViewer>

            <StackPanel Grid.Column="1" Margin="15,0,15,10">
                <Border Background="{DynamicResource Accent}" Height="20" CornerRadius="10,10,0,0" Width="70" HorizontalAlignment="Left" Margin="30,0,0,0">
                    <TextBlock FontSize="14" Text="Номер" Foreground="{DynamicResource Foreground2}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </Border>

                <Border Background="{DynamicResource Accent}" Height="40" CornerRadius="15">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="auto"/>
                        </Grid.ColumnDefinitions>

                        <ComboBox Name="DltComboBox" Style="{DynamicResource ComboBoxStyle1}" FontSize="20" BorderThickness="0" VerticalContentAlignment="Center"/>
                        <Border Width="1" Background="{DynamicResource Foreground2}" Margin="0,8,0,8" HorizontalAlignment="Right"/>
                        <TextBlock x:Name="deleteButton" MouseLeftButtonDown="DeleteButton_MouseLeftButtonDown" Cursor="Hand" Grid.Column="1" FontSize="20" Text="Удалить" Foreground="{DynamicResource Foreground}" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="15,0,15,0"/>
                    </Grid>
                </Border>
            </StackPanel>

            <Border Grid.Column="1" Grid.Row="1" Background="{DynamicResource Accent}" Margin="15" CornerRadius="15">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        
                        <StackPanel Margin="15,15,15,0" x:Name="stackPanel">
                            <StackPanel x:Name="scootersBlock">
                                <TextBlock Text="Номер" FontSize="20"/>
                                <TextBox x:Name="scooterNumber" FontSize="20" Margin="0,0,0,10"/>
                                <TextBlock Text="Заряд" FontSize="20"/>
                                <TextBox x:Name="scooterPower" FontSize="20" Margin="0,0,0,10"/>
                            </StackPanel>
                            <StackPanel x:Name="pointsBlock" Visibility="Collapsed">
                                <TextBlock Text="Адрес" FontSize="20"/>
                                <TextBox x:Name="pointAddress" FontSize="20" Margin="0,0,0,10"/>
                                <TextBlock Text="Кол-во мест" FontSize="20"/>
                                <TextBox x:Name="pointCount" FontSize="20" Margin="0,0,0,10"/>
                            </StackPanel>
                            <StackPanel x:Name="tarifsBlock" Visibility="Collapsed">
                                <TextBlock Text="Название" FontSize="20"/>
                                <TextBox x:Name="tarifName" FontSize="20" Margin="0,0,0,10"/>
                                <TextBlock Text="Цена" FontSize="20"/>
                                <TextBox x:Name="tarifPrice" FontSize="20" Margin="0,0,0,10"/>
                            </StackPanel>
                        </StackPanel>
                        
                    </ScrollViewer>

                    <Button x:Name="addButton" Style="{DynamicResource button}" Content="Добавить" Width="200" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Grid.Row="1" Height="40" Margin="15" Click="AddButton_Click"  FontSize="20"/>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
